{
  "name": "lazy-forms",
  "version": "1.0.0",
  "description": "Context-aware storage for form field values (input, textarea, select). Right-click to store or apply values.",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bestzip lazy-forms.zip manifest.json background.js content.js lib/ sidepanel/",
    "build-chrome": "node -e \"require('fs').copyFileSync('manifest.chrome.json','manifest.json')\"",
    "build-firefox": "node -e \"require('fs').copyFileSync('manifest.firefox.json','manifest.json')\"",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "chrome-extension",
    "forms",
    "autofill",
    "browser-extension"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "bestzip": "^2.2.1",
    "eslint": "^9.39.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
